<h1>映画投稿</h1>
<% if @cinema.errors.any? %>
  <div id="error_explanation">
    <h2><%= @cinema.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @cinema.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: Cinema.new, local: true) do |form| %>
  <div >
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div >
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>
  <%= form.submit %>
<% end %>
