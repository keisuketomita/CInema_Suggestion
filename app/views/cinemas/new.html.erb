<h3>映画投稿</h3>
<% if @cinema.errors.any? %>
  <div id="error_explanation">
    <h2><%= @cinema.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @cinema.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: Cinema.new, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div class="field">
    <%= form.label :url %><br>
    <%= form.text_field :url %>
  </div>
  <%= form.submit "新規投稿", class: "btn btn-primary" %>
<% end %>
