<h3>ユーザー詳細</h3>
<p>name : <%= @user.name %></p>
<% if @user == current_user %>
  <p>email : <%= @user.email %></p>
<% end %>
<p>投稿数 : <%= @user.cinemas.count %></p>
<% if @user == current_user %>
  <p><%= link_to 'プロフィールを編集', edit_user_path(@user.id), class: "btn btn-outline-warning" %></p>
<% end %>
<% if @user != current_user %>
  <%= render 'follow_form', user: @user %>
<% end %>
<table>
  <tr>
    <th>タイトル</th>
  </tr>
  <% @cinemas.each do |cinema| %>
    <tr>
      <td> <%= cinema.title %></td>
      <td> <%= link_to '詳細', cinema_path(cinema.id) %></td>
      <% if cinema.user_id == current_user.id %>
        <td> <%= link_to '編集', edit_cinema_path(cinema.id) %></td>
        <td> <%= link_to '削除', cinema_path(cinema.id), method: :delete,
          data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
